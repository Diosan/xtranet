= link_to "Brand Team > ", team_members_path
%br
%br
%h1 Team
%br
%br
%section{:class => "float_left content_full"}
  - @team_members.each do |team_member|
    %div{:class => "float_left quarter product_quarter team_member, team_member"}
      %h2= team_member.name
      %br
      = link_to image_tag(team_member.image_url(:thumb).to_s, :class => "team_image"), team_member_path(team_member)
      %br
      %strong Job Title:
      = team_member.job_title
      %br
      %br
      %strong Email:
      = link_to team_member.email, "mailto:" + team_member.email
      %br
      %span{:style => "text-align:right"}
        %strong
          = link_to "More", team_member_path(team_member), :style => "text-align:right"
