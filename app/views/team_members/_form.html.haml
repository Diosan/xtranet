= form_for @team_member do |f|
  - if @team_member.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team_member.errors.count, "error")} prohibited this team_member from being saved:"
      %ul
        - @team_member.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :job_title
    = f.text_field :job_title
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :curriculum_vitae
    = f.text_area :curriculum_vitae
  .actions
    = f.submit 'Save'
