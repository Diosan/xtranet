= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %span{:class => "input_wrapper"}
      = f.text_field :name
  .field
    = f.label :date
    %span{:class => "input_wrapper"}
      = f.text_field :date, :class => "eventdate"
  .field
    = f.label :image
    %span{:class => "input_wrapper"}
      = f.file_field :image
  .field
    = f.label :description
    %span{:class => "input_wrapper"}
      = f.text_area :description
  .field
    = f.label :text
    %span{:class => "input_wrapper"}
      = f.text_area :text
  .actions
    %span{:class => "btn_wrapper"}
      = f.submit 'Save'
